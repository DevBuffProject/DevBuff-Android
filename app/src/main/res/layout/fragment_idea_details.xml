                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_marginTop="@dimen/margin_default"
                    app:htmlText="@{ideaInfo.body}"
                    tools:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/specialists_title"
                    />

                <TextView
                    android:id="@+id/specialists_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_specialists"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/htmlBody"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/ideaSpecialistsList"
                    tools:listitem="@layout/idea_specialist_item"
                    tools:itemCount="5"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/specialists_title"
                    android:nestedScrollingEnabled="false"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


